#include <stdio.h>

int main()
{

float a,b,c;

printf("Podaj a i b\n");
scanf("%f %f", &a, &b);

printf("\n %.2f + %.2f = %.2f \n",a,b,a+b);
printf("\n %.1f - %.1f = %.1f \n",a,b,a-b);
printf("\n %.1f * %.2f = %.3f \n",a,b,a*b);
printf("\n %.3f / %.3f = %.3f \n",a,b,a/b);

printf("stare a = %f\n", a);

a=a*b;

printf("nowe a = %f\n", a);

return 0;
}
